<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>validate</servlet-name>
        <servlet-class>com.github.fge.jsonschema.servlets.ValidateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>validate</servlet-name>
        <url-pattern>/validate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>validateSyntax</servlet-name>
        <servlet-class>com.github.fge.jsonschema.servlets.SyntaxValidateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>validateSyntax</servlet-name>
        <url-pattern>/validateSyntax</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loadSamples</servlet-name>
        <servlet-class>com.github.fge.jsonschema.servlets.LoadSamplesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loadSamples</servlet-name>
        <url-pattern>/loadSamples</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>gzip</filter-name>
        <filter-class>org.eclipse.jetty.servlets.GzipFilter</filter-class>
        <init-param>
            <param-name>mimeTypes</param-name>
            <param-value>text/html,text/css,application/json,application/x-javascript</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>gzip</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
